{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "required": [
        "mainInOutput",
        "tsconfig"
    ],
    "properties": {
        "mainInOutput": {
            "type": "string"
        },
        "tsconfig": {
            "type": "string"
        },
        "runAndBuild": {
            "type": "boolean"
        },
        "NODE_ENV": {
            "type": "string"
        },
        "runOnly": {
            "type": "boolean"
        },
        "copy": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "from",
                    "to"
                ],
                "properties": {
                    "from": {
                        "type": "string"
                    },
                    "to": {
                        "type": "string"
                    }
                }
            }
        }
    }
}